{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "out"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/stripe/(.*)",
      "dest": "/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/_next/static/$1",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "STRIPE_SECRET_KEY": "@stripe_secret_key",
    "SENDGRID_API_KEY": "@sendgrid_api_key",
    "MONGODB_URI": "@mongodb_uri",
    "BASE_URL": "https://www.lavolailleenbray.com",
    "PRODUCER_EMAIL": "@producer_email",
    "EMAIL_USER": "@email_user"
  },
  "static": {
    "directory": "public"
  }
}
